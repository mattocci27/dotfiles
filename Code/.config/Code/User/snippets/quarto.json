{
  "Print to console": {
    "prefix": "log",
    "body": [
      "console.log('$1');",
      "$2"
    ],
    "description": "Log output to console"
  },
  "yml for manuscript": {
    "prefix": "ms yml",
    "body": [
     "---",
     "fontsize: 12pt",
     "geometry: margin=1in",
     "link-citations: yes",
     "csl: templates/ecology.csl",
     "bibliography: [LMA.bib]",
     "crossref:",
     "  fig-title: Fig.",
     "  fig-prefix: Fig.",
     "  eq-prefix: Eq.",
     "format:",
     "  html:",
     "    theme: spacelab #readable #sandstone #spacelab #flatly",
     "    toc: true",
     "    toc-depth: 2",
     "    toc-title: Contents",
     "    self-contained: true",
     "    smooth-scroll: true",
     "    highlight-style: github",
     "  docx:",
     "    toc: true",
     "    number-sections: false",
     "    highlight-style: github",
     "    html-math-method: katex",
     "  pdf:",
     "    toc: false",
     "    keep-tex: true",
     "    pdf-engine: pdflatex",
     "    template: templates/eisvogel2.tex",
     "    include-in-header:",
     "      text: |",
     "        \usepackage{xr}",
     "        \externaldocument{LMAms_SI}",
     "        \usepackage{lineno}",
     "        \linenumbers",
     " ---"
    ],
    "description": "yml for manuscript"
  },
  "global chunk": {
    "prefix": "global chunk",
    "body": [
      "```{r global_options, include=FALSE}",
      "library(knitr)",
      "knitr::opts_chunk\\$set(",
      "  collapse = TRUE,",
      "  comment = \"#>\",",
      "  message = FALSE,",
      "  cache = FALSE,",
      "  fig.align = \"center\",",
      "  fig.show = \"hold\"",
      ")",
      "```"
    ],
    "description": "global chunk"
  },
  "render": {
    "prefix": "rmd render",
    "body": [
      "system.time(rmarkdown::render(\"report.Rmd\"))"
    ],
    "description": "rmd render"
  },
    "Quarto YAML Header and R Chunk": {
        "prefix": "quarto-setup",
        "body": [
            "---",
            "title: \"$1\"",
            "author: \"Masatoshi Katabuchi\"",
            "date: \"`r format(Sys.time(), '%B %d, %Y')`\"",
            "fontsize: 12pt",
            "format:",
            "  html:",
            "    theme: coderpro",
            "    toc: true",
            "    toc-depth: 2",
            "    number-sections: true",
            "    smooth-scroll: true",
            "    standalone: true",
            "    embed-resources: true",
            "---",
            "",
            "```{r global_options, include=FALSE}",
            "library(knitr)",
            "knitr::opts_chunk$set(",
            "  collapse = TRUE,",
            "  comment = \"#>\",",
            "  message = FALSE,",
            "  cache = FALSE,",
            "  fig.align = \"center\",",
            "  fig.show = \"hold\"",
            ")",
            "```"
        ],
        "description": "Creates a basic YAML header and global options for R chunks in Quarto documents."
    },
      "Load an object with Targets": {
        "prefix": "loadobjects",  // You can customize the trigger prefix here
        "body": [
          "withr::with_dir(rprojroot::find_root('_targets.R'),",
          "  targets::tar_load(object_name)",
          ")"
        ],
        "description": "Load 'seedling_tbl_df' using targets within specified project directory"
      }
}
